@model Progra_Avanzada_W.Entidades.PreguntasFrecuentes


@{
    ViewData["Title"] = "RegistrarPreguntaFrecuente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper d-flex align-items-center auth px-0" style="margin-top:20px">
    <div class="row col-md-11 mx-0 card mb-4">
        <div class="card-body">
            <div class="mb-3">
                @if (Context.Session.GetString("NombreRol") == "Trabajador Administrativo")
                {
            <div class="header">

                <h2 class="font-weight-bold" style="font-size: 250%">
                    Registrar Pregunta Frecuente <small>Ingrese la pregunta y respuesta</small>
                </h2>
            </div>
            @using (Html.BeginForm("RegistrarPreguntaFrecuente", "PreguntasFrecuentes", FormMethod.Post, new { @class = "pt-3" }))
            {
                @ViewBag.MensajePantalla



                <br />
                    <div class="mb-3">
                        <label for="Pregunta" class="form-label">Pregunta</label>
                        @Html.TextBoxFor(m => m.Pregunta, new { @class = "form-control", @type = "text", @placeholder = "Pregunta" })
                    </div>

                    <div class="mb-3">
                        <label for="Respuesta" class="form-label">Respuesta</label>
                        @Html.TextBoxFor(m => m.Respuesta, new { @class = "form-control", @type = "text", @placeholder = "Respuesta" })
                    </div>

                    <br />

                <div class="mt-3">
                    <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-normal auth-form-btn" value="Registrar pregunta frecuente">
                </div>
                }
               
            }
            </div>
        </div>
    </div>
</div>