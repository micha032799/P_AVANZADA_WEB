@model Progra_Avanzada_W.Entidades.Usuario

@{
    ViewData["Title"] = "ActualizarPerfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper d-flex align-items-center justify-content-center auth px-0" style="margin-top:20px">
    <div class="row col-md-10 mx-0 card mb-4">
        <div class="card-body">
            <div class="mb-3">
            <div class="header">
                <h2 class="font-weight-bold" style="font-size: 250%">Mi Perfil <small>Actualizar Perfil</small></h2>
            </div>

            @using (Html.BeginForm("ActualizarPerfil", "Usuario", FormMethod.Post, new { @class = "pt-3" }))
            {
                <p class="font-weight-bold">@ViewBag.MsjPantalla</p>
                <br />

                <div class="form-group col-md-12 mb-3">
                    @Html.Label("Correo")
                    @Html.TextBoxFor(x => x.Correo, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Correo",
                            @required = "true"
                        })
                </div>

                <div class="form-group col-md-12 mb-3">
                    @Html.Label("Nombre")
                    @Html.TextBoxFor(x => x.NombreUsuario, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Nombre",
                            @required = "true"
                        })
                </div>

                <div class="form-group col-md-12 mb-3">
                    @Html.Label("Contraseña")
                    @Html.TextBoxFor(x => x.Contrasenna, new
                        {
                            @type = "Password",
                            @class = "form-control form-control-lg",
                            @placeholder = "Contraseña",
                            @pattern = "^((?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\\W]).{6,20})"
                        })
                </div>

                <div class="form-group col-md-12 mb-3">
                    @Html.Label("Rol")
                    @Html.TextBoxFor(x => x.NombreRol, new
                        {
                            @class = "form-control form-control-lg",
                            @placeholder = "Rol",
                            @required = "true",
                            @disabled = "true"
                        })
                </div>

                <div class="mt-3 col-md-12 text-center">
                    <button type="submit" class="btn btn-primary btn-lg font-weight-bold auth-form-btn">Procesar</button>
                </div>
            }
            </div>
        </div>
    </div>
</div>

